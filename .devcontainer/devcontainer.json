{
    "name": "Modbus_Proxy - ESP32 PlatformIO",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "platformio.platformio-ide",
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "platformio-ide.useBuiltinPIOCore": false,
                "C_Cpp.default.configurationProvider": "platformio.platformio-ide"
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        },
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        }
    },
    "appPort": ["2223:2222"],
    "postCreateCommand": "git config --global credential.helper store && git config --global core.sshCommand 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null' && pip install platformio==6.1.16 && pio pkg install --project-dir Modbus_Proxy && echo 'cd /workspaces/Modbus_Proxy' >> ~/.bashrc",
    "workspaceFolder": "/workspaces/Modbus_Proxy",
    "remoteUser": "dev",
    "runArgs": [
        "--device-cgroup-rule=c 188:* rmw"
    ],
    "mounts": [
        "source=/dev,target=/dev,type=bind,consistency=consistent",
        "source=${localEnv:HOME}/.ssh/authorized_keys,target=/home/dev/.ssh/authorized_keys,type=bind,readonly",
        "source=${localEnv:HOME}/.ssh/id_ed25519,target=/home/dev/.ssh/id_ed25519,type=bind,readonly",
        "source=${localEnv:HOME}/.git-credentials,target=/home/dev/.git-credentials,type=bind,readonly",
        "source=${localEnv:HOME}/.secrets,target=/home/dev/.secrets,type=bind,readonly"
    ],
    "containerEnv": {
        "PLATFORMIO_CORE_DIR": "/home/dev/.platformio"
    }
}
